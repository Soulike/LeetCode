{
    // 下面四行关闭智能提示
    "editor.snippetSuggestions": "none",
    // 控制键入时是否应自动显示建议
    "editor.quickSuggestions": {
        "other": false,
        "comments": false,
        "strings": false
    },
    // 控制键入触发器字符时是否应自动显示建议
    "editor.suggestOnTriggerCharacters": false,
    // 控制是否根据文档中的文字计算自动完成列表。
    "editor.wordBasedSuggestions": false,
}